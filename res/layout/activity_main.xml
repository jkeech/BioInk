<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="horizontal"
	android:baselineAligned="false"
	android:background="@android:color/white"
	android:weightSum="2" >

	<LinearLayout
		android:id="@+id/logoSide"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		android:contentDescription="@string/bio_ink_logo" >

		<ImageView
			android:id="@+id/logoImageView"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_gravity="center"
			android:contentDescription="@string/bio_ink_logo"
			android:src="@drawable/logo_transparent" />

		<VideoView
			android:visibility="gone"
			android:id="@+id/logoVideoView"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_gravity="center"
			android:contentDescription="@string/bio_ink_logo" />

		<WebView
			android:visibility="gone"
			android:id="@+id/logoWebView"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_gravity="center"
			android:contentDescription="@string/bio_ink_logo" />

	</LinearLayout>
	
	<LinearLayout
		android:id="@+id/linearControl"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		android:gravity="center_vertical|center_horizontal"
		android:orientation="vertical"
		android:weightSum="15" >

		<LinearLayout 
			android:id="@+id/linearRadio"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center_vertical|center_horizontal"
			android:orientation="horizontal" >
			
			<TextView
				android:id="@+id/radioTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/radio_status" />
			
			<ProgressBar
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/progress"
				android:visibility="gone"
				style="@android:style/Widget.ProgressBar.Small"
				android:layout_marginLeft="5dp" />
		</LinearLayout>

		<TextView
			android:id="@+id/pairedTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/devices_paired" />

		<TextView
			android:id="@+id/audibleTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/devices_audible" />

		<Button
			android:id="@+id/vizButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
			android:layout_marginTop="20dp"
			android:layout_weight="3"
			android:text="@string/viz_button" />

		<Button
			android:id="@+id/menuButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="0dp"
			android:layout_marginRight="0dp"
			android:layout_marginTop="30dip"
			android:layout_weight="1"
			android:text="@string/menu_button" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/linearAdvanced"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		android:gravity="center_vertical|center_horizontal"
		android:orientation="vertical"
		android:visibility="gone"
		android:layout_marginRight="30dip"
		android:weightSum="15" >

		<TextView
			android:id="@+id/advanced"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/advanced_settings" />

		<LinearLayout
			android:id="@+id/linearStub"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_vertical|center_horizontal"
			android:orientation="vertical" >
		</LinearLayout>
		
		<LinearLayout
			android:id="@+id/linearSmallScreen"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_vertical|center_horizontal"
			android:visibility="gone"
			android:orientation="vertical" >
			<LinearLayout
				android:id="@+id/hrLayout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical|center_horizontal"
				android:orientation="horizontal" >
				<TextView
					android:id="@+id/hrTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:width="80dip"
					android:text="_Heartrate" />
				<TextView
					android:id="@+id/minHTextView"
					android:width="25dip"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="_0" />
				<ImageView
					android:id="@+id/hrRangeView"
					android:visibility="gone"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<TextView
					android:id="@+id/maxHTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="_251" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/respLayout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical|center_horizontal"
				android:orientation="horizontal" >
				<TextView
					android:id="@+id/respTextView"
					android:width="80dip"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="_Respiration" />
				<TextView
					android:id="@+id/minRTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="_0" />
				<ImageView
					android:id="@+id/respRangeView"
					android:visibility="gone"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<TextView
					android:id="@+id/maxRTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="_99" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/colorLayout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical|center_horizontal"
				android:orientation="horizontal" >
				<TextView
					android:id="@+id/colorTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="_Color" />
				<Spinner
					android:id="@+id/colorSpinner"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/energyLayout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical|center_horizontal"
				android:orientation="horizontal" >
				<TextView
					android:id="@+id/energyTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="_Energy" />
				<Spinner
					android:id="@+id/energySpinner"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			</LinearLayout>
		</LinearLayout>
			
		<Button
			android:id="@+id/accept_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/accept" />
	</LinearLayout>

</LinearLayout>
